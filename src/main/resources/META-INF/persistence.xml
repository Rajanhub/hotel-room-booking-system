<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="persistence_context">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>kws.hotel.domain.User</class>
        <class>kws.hotel.domain.Room</class>
        <class>kws.hotel.domain.RoomSize</class>
        <class>kws.hotel.domain.RoomType</class>
        <class>kws.hotel.domain.Reservation</class>
    </persistence-unit>

</persistence>